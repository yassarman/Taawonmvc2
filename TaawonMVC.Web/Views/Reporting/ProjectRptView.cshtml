@using TaawonMVC.Web.Models.Common.Modals
@model TaawonMVC.Web.Models.Reporting.ReportingViewModel
@{
    ViewBag.Title = "ProjectRptView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProjectRptView</h2>
<form name="ProjectRpt" role="form" validate class="form-validation">
    <div class="row clearfix">
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Donor</span>
                    @Html.DropDownList("Donors", new SelectList(Model.Donors, "Id", "DonorName"), "Select Donor", htmlAttributes: new { @class = "form-control", @name = "donorId", @id = "donorId", @required = "true" })
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Year</span>
                    <input class="validate form-control" type="text" name="year" id="year"  required  placeholder="@L("Year")">
                </div>
            </div>
        </div>
    </div>
    
    
    @* test the report *@
    <div id="reportView" class="table-responsive">
        <iframe width="100%" height="300px" name="iframe_a">  
          @*@ReportViewerForMvc()*@
           @* @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new {scrolling = "yes", width = "100%"})*@        
        </iframe>
    </div>
    

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
        @*<button type="submit" onclick="location.href='@Url.Action("SaveConvertedApplication", "Applications")'" class="btn btn-primary waves-effect">@L("Save")</button>*@
        <button type="submit" formaction="@Url.Action("projectRpt", "Reporting")" class="btn btn-primary waves-effect">Call Report</button>
    </div>
    
    
    

</form>


